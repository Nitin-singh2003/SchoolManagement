<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Management</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    >
    <style>
      /* Center the content */
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        background: linear-gradient(135deg, #007bff, #6610f2);
        color: #ffffff;
      }

      .container {
        background: #ffffff;
        color: #333;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        max-width: 600px;
        width: 100%;
      }

      .form-label {
        font-weight: bold;
        font-size: 1.1rem;
      }

      input[type="text"] {
        border-radius: 8px;
      }

      button[type="submit"] {
        padding: 12px 20px;
        font-size: 16px;
        font-weight: bold;
        background: linear-gradient(135deg, #007bff, #6610f2);
        border: none;
        color: #fff;
        border-radius: 8px;
        width: 100%;
        transition: all 0.3s;
      }

      button[type="submit"]:hover {
        background: linear-gradient(135deg, #0056b3, #500dab);
      }

      table {
        margin-top: 20px;
        border-radius: 8px;
        overflow: hidden;
      }

      th {
        background: #6610f2;
        color: #fff;
        text-align: center;
      }

      tr:nth-child(odd) {
        background: #f8f9fa;
      }

      tr:nth-child(even) {
        background: #e9ecef;
      }

      tr:hover {
        background: #d6d8db;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2 class="text-center mb-4">Nearby Schools Finder</h2>
      <form id="fetch-schools-form">
        <div class="mb-3">
          <label for="latitude" class="form-label">Latitude:</label>
          <input type="text" id="latitude" name="latitude" class="form-control" placeholder="Enter latitude" required>
        </div>

        <div class="mb-3">
          <label for="longitude" class="form-label">Longitude:</label>
          <input type="text" id="longitude" name="longitude" class="form-control" placeholder="Enter longitude" required>
        </div>

        <div class="mb-3">
          <button type="submit" class="btn">Find Schools</button>
        </div>
      </form>

      <!-- Placeholder for the results -->
      <div class="mt-4">
        <h4>Nearby Schools:</h4>
        <table class="table table-striped table-bordered" id="schools-table" style="display: none;">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Address</th>
              <th>Distance (km)</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>

    <script>
      const form = document.getElementById('fetch-schools-form');
      const table = document.getElementById('schools-table');
      const tbody = table.querySelector('tbody');

      form.addEventListener('submit', async (event) => {
        event.preventDefault();

        const latitude = document.getElementById('latitude').value;
        const longitude = document.getElementById('longitude').value;

        try {
          const response = await fetch(`/listSchools?latitude=${latitude}&longitude=${longitude}`);
          if (!response.ok) {
            throw new Error('Failed to fetch schools');
          }

          const schools = await response.json();

          // Populate the table
          tbody.innerHTML = '';
          schools.forEach((school, index) => {
            const row = `<tr>
              <td>${index + 1}</td>
              <td>${school.name}</td>
              <td>${school.address}</td>
              <td>${school.distance.toFixed(2)}</td>
            </tr>`;
            tbody.innerHTML += row;
          });

          table.style.display = schools.length ? 'table' : 'none';
        } catch (error) {
          console.error(error);
          alert('An error occurred while fetching schools.');
        }
      });
    </script>
  </body>
</html>
